@model List<WebAutoPark.Data.Entities.CompanyEntity>

@{
    ViewData["Title"] = "Home Page";
    int i = 1;
}

<div class="container">
    <h1 class="text-center display-4">Компанії</h1>
    <a href="@Url.Action("Create")" class="btn btn-success">Додати</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Назва</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>

            @foreach(var item in Model)
            {
                <tr>
                    <th scope="row">@(i++)</th>
                    <td>@item.Name</td>
                    <td>
                        <form action="@Url.Action("Delete", new {id = item.Id})" method="post">
                            <input type="submit" class="btn btn-danger" value="Видалити" />
                        </form>
                    </td>
                </tr>
            }
            
            
        </tbody>
    </table>
</div>
