@model VehicleEditVM

@{
	var vehicleStatuses = Model.VehicleStatuses.Select(x => new SelectListItem
			{
				Text = x.Name,
				Value = x.Id.ToString()
			});

	var companies = Model.Companies.Select(x => new SelectListItem
			{
				Text = x.Name,
				Value = x.Id.ToString()
			});
}

<h1 class="text-center" style=" margin-top: 50px;">
	Редагування авто
</h1>
<div class="container">
	<form class="offset-md-3 col-md-6 mb-4" asp-action="Edit" enctype="multipart/form-data">

		<div asp-validation-summary="ModelOnly" class="text-danger"></div>

		<div class="mb-3">
			<label asp-for="RegistrationNumber" class="form-label"></label>
			<input asp-for="RegistrationNumber" class="form-control" required>
			<span asp-validation-for="RegistrationNumber" class="text-danger"></span>
		</div>

		<div class="mb-3">
			<label asp-for="Brand" class="form-label"></label>
			<input asp-for="Brand" class="form-control" required>
			<span asp-validation-for="Brand" class="text-danger"></span>
		</div>

		<div class="mb-3">
			<label asp-for="Model" class="form-label"></label>
			<input asp-for="Model" class="form-control" required>
			<span asp-validation-for="Model" class="text-danger"></span>
		</div>

		<div class="mb-3">
			<label asp-for="Year" class="form-label"></label>
			<input asp-for="Year" class="form-control" required>
			<span asp-validation-for="Year" class="text-danger"></span>
		</div>

		<div class="mb-3">
			<label asp-for="VehicleStatuses" class="form-label"></label>
			@Html.DropDownListFor(x => x.StatusId, vehicleStatuses, new { @class = "form-select" })
			<span asp-validation-for="StatusId" class="text-danger"></span>
		</div>

		<div class="mb-3">
			<label asp-for="Companies" class="form-label"></label>
			@Html.DropDownListFor(x => x.CompanyId, companies, new { @class = "form-select" })
			<span asp-validation-for="CompanyId" class="text-danger"></span>
		</div>

		<button type="submit" class="btn btn-primary">Зберегти</button>
		<a asp-action="Index" class="btn btn-info">Скасувати</a>
	</form>
</div>
   


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}